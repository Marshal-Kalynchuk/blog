
<h1><%= @article.title %></h1>
<p><%= @article.body %></p>


<h2>Comments</h2>
<%= render partial: "comments/comment", collection: @article.comments %>

<h3>Add a comment:</h3>
<%= render "comments/form" %>
<br>
<ul class='edit-article-list'>
  <li><%= link_to "Back", root_path %></li>
  <li><%= link_to "Edit", edit_article_path(@article.id)%></li>
  <li><%= link_to "Delete", article_path(@article), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %></li>
  
</ul>